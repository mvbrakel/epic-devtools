#!/usr/bin/env php
<?php

// Use composers autoload.php if available
if (file_exists(dirname(__FILE__) . '/../../../../autoload.php')) {
    $basePath = realpath(dirname(__FILE__) . '/../../../../../');
    require_once dirname(__FILE__) . '/../../../../autoload.php';
} else if (file_exists(dirname(__FILE__) . '/../../../../../../autoload.php')) {
    $basePath = realpath(dirname(__FILE__) . '/../../../../../../../');
    require_once dirname(__FILE__) . '/../../../../../../autoload.php';
}

use EpicDevTools\Console\Application;

$application = new Application($basePath);
$application->run();
